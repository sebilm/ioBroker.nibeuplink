{
  "name": "iobroker.nibeuplink",
  "version": "1.1.1",
  "description": "With this adapter data of a Nibe heat pump can be read from Nibe Uplink.",
  "author": {
    "name": "Sebastian Haesselbarth",
    "email": "seb@sebmail.de"
  },
  "contributors": [
    {
      "name": "Sebastian Haesselbarth"
    }
  ],
  "homepage": "https://github.com/sebilm/ioBroker.nibeuplink",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Smart Home",
    "home automation",
    "nibeuplink",
    "nibe",
    "heat pump"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sebilm/ioBroker.nibeuplink"
  },
  "engines": {
    "node": ">=12.0.0 <17"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.0",
    "@types/jsonfile": "^6.1.0",
    "axios": "^0.27.2",
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@iobroker/testing": "^3.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.3",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.31.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src/",
    "release": "release-script"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/sebilm/ioBroker.nibeuplink/issues"
  },
  "readmeFilename": "README.md"
}
